@page "/"
@using Telerik.SvgIcons

<PageTitle>Komax 2.0 - Nowoczesny system kadrowo-płacowy</PageTitle>

<section class="hero-split bg-vivid">
    <div class="hero-container">
        <!-- Lewa strona - Treść -->
        <div class="hero-content">
            <h1 class="hero-title">
                <span class="line-primary">Kadry. Płace. Czas pracy.</span><br />
                <span class="highlight">Wszystko pod kontrolą.</span>
            </h1>

            <p class="hero-description">
                Komax automatyzuje rozliczenia wynagrodzeń, rozlicza czas pracy,
                pilnuje urlopów i dokumentów — zawsze zgodnie z aktualnymi przepisami.
            </p>

            <div class="hero-separator" aria-hidden="true"></div>

            <div class="hero-features">
                <div class="feature-badge">
                    <TelerikSvgIcon Icon="@SvgIcon.DevicesSolid" />
                    <span>Responsive design</span>
                </div>
                <div class="feature-badge">
                    <TelerikSvgIcon Icon="@SvgIcon.Cloud" />
                    <span>100% w chmurze</span>
                </div>
                <div class="feature-badge">
                    <TelerikSvgIcon Icon="@SvgIcon.Lock" />
                    <span>Bezpieczny RODO</span>
                </div>
            </div>

            <div class="hero-actions">
                <TelerikButton OnClick="@(() => Navigation.NavigateTo("/kontakt"))"
                               ThemeColor="@ThemeConstants.Button.ThemeColor.Primary"
                               Size="@ThemeConstants.Button.Size.Large"
                               Class="btn-primary-hero">
                    <TelerikSvgIcon Icon="@SvgIcon.Calendar" /> Umów prezentację
                </TelerikButton>
                <TelerikButton OnClick="@(() => Navigation.NavigateTo("/produkt"))"
                               FillMode="@ThemeConstants.Button.FillMode.Outline"
                               Size="@ThemeConstants.Button.Size.Large"
                               Class="btn-secondary-hero">
                    <TelerikSvgIcon Icon="@SvgIcon.ArrowRight" /> Poznaj produkt
                </TelerikButton>
            </div>
        </div>

        <!-- Prawa strona - Mockup -->
        <div class="hero-visual">
            <svg aria-hidden="true" focusable="false" width="0" height="0" style="position:absolute">
                <defs>
                    <filter id="edge-bolt" x="-35%" y="-35%" width="170%" height="170%" color-interpolation-filters="sRGB">
                        <feMorphology in="SourceAlpha" operator="dilate" radius="2" result="OUTER" />
                        <feMorphology in="SourceAlpha" operator="erode" radius="0.9" result="INNER" />
                        <feComposite in="OUTER" in2="INNER" operator="out" result="RING" />
                        <feFlood flood-color="#00C9FF" result="CYAN" />
                        <feComposite in="CYAN" in2="RING" operator="in" result="CYAN_RING" />
                        <feGaussianBlur in="CYAN_RING" stdDeviation="6" result="CYAN_G1" />
                        <feGaussianBlur in="CYAN_RING" stdDeviation="24" result="CYAN_G2" />
                        <feGaussianBlur in "CYAN_RING" stdDeviation="64" result="CYAN_G3" />
                        <feFlood flood-color="#1EF6A3" result="GREEN" />
                        <feComposite in="GREEN" in2="RING" operator="in" result="GREEN_RING" />
                        <feGaussianBlur in="GREEN_RING" stdDeviation="4" result="GREEN_G1" />
                        <feGaussianBlur in="GREEN_RING" stdDeviation="18" result="GREEN_G2" />
                        <feGaussianBlur in="GREEN_RING" stdDeviation="48" result="GREEN_G3" />
                        <feImage x="0" y="0" width="100%" height="100%" result="WEDGE"
                                 preserveAspectRatio="xMidYMid slice"
                                 xlink:href="data:image/svg+xml;utf8,
                     <svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'>
                       <defs>
                         <radialGradient id='g' cx='50%%' cy='50%%' r='60%%'>
                           <stop offset='0' stop-color='white'/>
                           <stop offset='1' stop-color='white' stop-opacity='0'/>
                         </radialGradient>
                       </defs>
                       <g>
                         <path d='M50,50 L100,48 L100,52 Z' fill='url(%23g)'/>
                         <animateTransform attributeName='transform' type='rotate'
                                           from='0 50 50' to='360 50 50'
                                           dur='6s' repeatCount='indefinite'/>
                       </g>
                     </svg>"/>
                        <feComposite in="WEDGE" in2="RING" operator="in" result="HILIGHT_MASK" />
                        <feFlood flood-color="#CFFFF7" result="HILIGHT_COLOR" />
                        <feComposite in="HILIGHT_COLOR" in2="HILIGHT_MASK" operator="in" result="HILIGHT" />
                        <feGaussianBlur in="HILIGHT" stdDeviation="2" result="HILIGHT_SOFT" />
                        <feGaussianBlur in="HILIGHT" stdDeviation="7" result="HILIGHT_GLOW" />
                        <feMerge>
                            <feMergeNode in="CYAN_G3" />
                            <feMergeNode in="GREEN_G3" />
                            <feMergeNode in="CYAN_G2" />
                            <feMergeNode in="GREEN_G2" />
                            <feMergeNode in="CYAN_G1" />
                            <feMergeNode in="GREEN_G1" />
                            <feMergeNode in="HILIGHT_GLOW" />
                            <feMergeNode in="HILIGHT_SOFT" />
                            <feMergeNode in="SourceGraphic" />
                        </feMerge>
                    </filter>
                </defs>
            </svg>

            <div class="mockup-wrapper">
                <img src="/images/Laptop.webp"
                     alt="Komax 2.0 - Dostępny na każdym urządzeniu"
                     class="mockup-image edge-bolt"
                     loading="eager" />

                @* <div class="floating-card floating-card--top-right">
                    <div class="card-content">
                        <div class="stat-group">
                            <TelerikSvgIcon Icon="@SvgIcon.User" Class="stat-icon" />
                            <div>
                                <strong>500+</strong>
                                <span>Firm korzysta</span>
                            </div>
                        </div>
                        <div class="stat-group">
                            <TelerikSvgIcon Icon="@SvgIcon.Star" Class="stat-icon" />
                            <div>
                                <strong>4.9/5</strong>
                                <span>Ocena klientów</span>
                            </div>
                        </div>
                    </div>
                </div> *@
            </div>
        </div>
    </div>
</section>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
}